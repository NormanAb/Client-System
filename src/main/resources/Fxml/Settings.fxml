<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="dashboard" stylesheets="@../Styles/Dashboard.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ClientManagement.Controllers.SettingsController">

    <!-- Header Section -->
    <AnchorPane layoutX="10.0" layoutY="14.0" prefHeight="70.0" prefWidth="830.0" styleClass="dashboard-header">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                <children>
                    <Label styleClass="dashboard-header-text" text="Settings">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
            <Label layoutX="700.0" layoutY="20.0" styleClass="stat-label" text="Today: 2025-03-22" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="20.0" />
        </children>
    </AnchorPane>

    <!-- Main Content Area -->
    <AnchorPane layoutX="10.0" layoutY="90.0" prefHeight="640.0" prefWidth="830.0">
        <children>
            <!-- Backup Buttons -->
            <HBox layoutX="20.0" layoutY="20.0" prefHeight="31.0" prefWidth="371.0" spacing="100.0">
                <children>
                    <Button fx:id="createBackup_btn" mnemonicParsing="false" prefHeight="29.0" prefWidth="135.0" styleClass="action-button" stylesheets="@../Styles/Normano.css" text="Create Backup" />
                </children>
            </HBox>
        </children>
    </AnchorPane>
</AnchorPane>
